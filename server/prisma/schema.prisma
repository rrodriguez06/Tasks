datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Task {
  createdAt   DateTime  @default(now())
  description String?
  due         DateTime?
  id          String    @id @default(cuid())
  name        String?
  updatedAt   DateTime  @updatedAt
}